<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Topmost="True" WindowState="Maximized" 
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Name="rect" Width="200" VerticalAlignment="Stretch" Visibility="Collapsed" Background="#99000000">
            <Label x:Name="label" Content="Menu"  VerticalAlignment="Top" Background="#FF383737" FontFamily="Cambria" FontSize="18" Foreground="#FFFFFBFB" HorizontalContentAlignment="Center"/>
        </Grid>

        <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Width="32" Height="32" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Right" Background="White" Click="Button_Click">&gt;</Button>
        <Grid Background="#FF07A2A2" Margin="10,2,10,-2" Grid.Column="1">
            <Button x:Name="button" Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="175" Margin="243,194,0,0" Height="40" RenderTransformOrigin="0.703,1.525"/>

        </Grid>
    </Grid>
</Window>